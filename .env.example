# UKG Classifieds Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
DB_PATH=database.sqlite
RESET_DB=false

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1
# Base URL for external links (used in RSS feeds, email links, etc.)
# Use your actual server IP:port or domain name here
HOST_URL=http://127.0.0.1:3001

# Security
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h
MANAGEMENT_KEY_LENGTH=64

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@example.com

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# API Docs
SWAGGER_PATH=/api-docs
SWAGGER_ENABLED=true

# Application Settings
APP_NAME=UKG Classifieds
APP_URL=http://localhost:3001
ITEMS_PER_PAGE=12

# Admin Contact
ADMIN_EMAIL=cam.cameron@ukg.com

# Debug Mode (set to true for more detailed logs)
DEBUG=false 