{
  "name": "ukg-marketplace",
  "version": "1.0.0",
  "description": "A marketplace application for UKG",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./public/css/output.css --minify",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./public/css/output.css --watch",
    "build": "npm run build:css",
    "dev:full": "concurrently \"npm run dev\" \"npm run watch:css\"",
    "db:init": "node src/database/schema.js",
    "db:seed": "node src/database/seed.js",
    "db:init-and-seed": "node scripts/db-init-seed.js",
    "db:reset": "node scripts/reset-db.js",
    "db:reset-safe": "node scripts/reset-db-safe.js",
    "db:find-lock": "node scripts/find-db-lock.js",
    "db:reset-force": "node scripts/reset-db-force.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "morgan-json": "^1.1.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
